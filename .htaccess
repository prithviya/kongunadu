# Enable RewriteEngine
RewriteEngine On

# Redirect specific PHP pages to clean URLs
RewriteRule ^index / [L,R=301,NE]

# Redirect www to non-www
RewriteCond %{HTTP_HOST} ^www\.kongunadu\.us [NC]
RewriteRule ^(.*)$ https://kongunadu.us/$1 [L,R=301]

# Force HTTPS for all requests
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Error documents for 404
ErrorDocument 404 /404.php

# Rewrite clean URLs to PHP or HTML if they exist
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [L]

# Redirect .php and .html to clean URLs
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\ /([^\ ]+)\.(php|html)\ HTTP
RewriteRule ^ /%1 [L,R=301]

# Handle non-existent URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^.*$ /404.php [L,R=302]

# Handle requests for directories without index files
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_FILENAME}/index.html !-f
RewriteCond %{REQUEST_FILENAME}/index.htm !-f
RewriteCond %{REQUEST_FILENAME}/index.php !-f
RewriteRule ^(.*)$ / [L,R=302]

# Disable directory indexing
Options -Indexes

# Compression for static assets
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/javascript application/x-javascript
</IfModule>




# Browser Caching
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# Leverage Browser Caching for PHP (dynamic pages)
<FilesMatch "\.(php)$">
  Header set Cache-Control "private, must-revalidate, max-age=0"
</FilesMatch>
